    height: 40px

  .title
    color: #aaa
    margin: 25px
    font-weight: 400
    height: 40px
    line-height: 17px

  .list
    .speaker
      padding: 10px
      a
        text-decoration: none
        text-align: center
        .text
          height: 100px
