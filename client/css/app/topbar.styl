.topbar
  position: fixed
  z-index: 300
  width: 100%
  background: rgba(0,0,0,0.6)
  -webkit-transform: scale3d(1, 1, 1)
  top: 0
  font-size: 16px
  font-weight: 200
  max-height: 70px
  color: #fff

  a
    text-decoration: none
    color: #555

  .user-picture
    display: inline-block
    border-radius: 100%
    margin-right: 5px
    uniform-size(25px)

  .ink-navigation
    ul
      li
        display: inline-block
        padding-bottom: 20px
        padding-top: 20px
        padding-left: 5px
        padding-right: 5px
        font-weight: 400
        a
          color: #fff
          display: inline-block
          padding-left: 5px !important
          padding-right: 5px !important
          padding-bottom: 10px
          padding-top: 10px
        a:hover
          color: #428bca
        >ul.submenu
          background: rgba(37, 37, 37, 1) !important
          >li
            padding: 15px
            >a
              color: #fff
        div.left-drawer-trigger
          margin-top: 4px
          margin-right: 5px
          padding: 3px 6px
      li.active
        a
          color: #428bca
          text-decoration: none
      li.title
        a
          height: 45px;
          padding: 5px 5px
          img
            vertical-align: middle

  #menuMobile
    font-size:28px
    padding-top: 20px
    margin-right: 10px
    cursor: pointer

  #menuVertical
    padding-top: 85px
    display: none

  #menuVertical li
    width: 100%
    text-align: center
    padding-bottom: 0px
    padding-top: 0px

  #menuMobile:active
    menu()

  menu()
    #menuVertical li
      display block

.ink-navigation ul.menu.horizontal > li:first-child,
.ink-navigation ul.menu.horizontal > li:first-child a
  border-radius: 5px

.ink-navigation ul.menu.horizontal > li:last-child,
.ink-navigation ul.menu.horizontal > li:last-child a
  border-radius: 0


button.ink-button.right-drawer-trigger
  background: transparent
  color: white

  span.fa.fa-times
    display: none


body.ink-drawer
  &.push.right
    button.ink-button.right-drawer-trigger
      span.fa.fa-bars
        display: none
      span.fa.fa-times
        display: block
  .right-drawer
    background-color: #0077AA

    ul
      padding-left: 0
      li
        list-style: none
        border-bottom: solid #006194 1px
        vertical-align: top
        margin: 0
        padding: 1em 0 1em 1.45em
        &:first-child
          color: white
          font-size: 1.40em
          text-align: center
          padding: 1.45em 0
        a
          color: white
