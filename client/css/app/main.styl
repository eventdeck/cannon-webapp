    ul
      li.active
        a
          color: inherit !important

html
  font-family: 'Montserrat', sans-serif;

body
  font-family: 'Montserrat', sans-serif;
  background: white

.page
  min-height: 480px
  padding: 5em 0
  &.home
    padding: 0

table
  margin-bottom: 0

i.fa
  span
    margin: 0 5px

h1,h2,h3,h4,h5,h6
  margin: 0px

footer
  padding: 30px
  border-top: 1px solid #eee
