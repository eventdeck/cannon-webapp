.members.list
.members.view
  text-align: center

.members
  color: white

  .social-icon
    text-decoration: none;
    margin: 0.1em;
    opacity: 0.9;
    color: $dkgray;
    font-size: 1.2em;
    padding: 5px

  .social-icon:hover
    opacity: 1;
    color: $dkgray;

  .img-container
    max-width: 100px
    margin-left: auto
    margin-right: auto
  .img
    overflow: hidden
    background-size: cover
    background-position: 50%
    background-color: #eee
    width: 100%
    padding-bottom: 100%
    border-radius: 50%

  .name
    margin: 5px
    text-align: center
    height: 40px
    display: flex;
    justify-content: center;
    align-items: center;

  .list
    .member
      padding: 10px
      a
        text-decoration: none
        text-align: center
        .text
          height: 100px
