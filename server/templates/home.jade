html
  include ../../views/head
  script(type='text/javascript' src='http://fastly.ink.sapo.pt/3.1.10/js/ink-all.js')
  script(type='text/javascript' src='http://fastly.ink.sapo.pt/3.1.10/js/autoload.js')
  script.
    function getScript(source, callback) {
      var script = document.createElement('script');
      var prior = document.getElementsByTagName('script')[0];
      script.async = 1;
      prior.parentNode.insertBefore(script, prior);

      script.onload = script.onreadystatechange = function( _, isAbort ) {
          if(isAbort || !script.readyState || /loaded|complete/.test(script.readyState) ) {
              script.onload = script.onreadystatechange = null;
              script = undefined;

              if(!isAbort) { if(callback) callback(); }
          }
      };

      script.src = source;
    }

    getScript( 'https://www.google.com/jsapi' , function(){
      google.load("maps", "3",{
        callback: function (){
          console.log('HERE LOADED GOOGLE');
          var map = new google.maps.Map(document.querySelector('[data-hook=map-canvas]'),{
            scrollwheel: false,
            center: new google.maps.LatLng(38.7375721,-9.1376594),
            zoom: 17,
            mapTypeId: google.maps.MapTypeId.ROADMAP
          });
          var marker = new google.maps.Marker({
            position: new google.maps.LatLng(38.7375721,-9.1376594),
            map: map,
            title: 'SINFO'
          });
        }
      });
    });
  
  body.ink-drawer
    include ./nav.jade

    section.page.home.content-drawer

      .header#header
        .opacidade.column-group.gutters
          .all-100
            h1
              a(href="/")
                img(src='/static/logo2.png')
            br

            a.social-icon(target="_blank" href="http://fb.com/sinfoist")
              i.social-icon.fa.fa-facebook
            a.social-icon(target="_blank" href="http://twitter.com/sinfoist")
              i.social-icon.fa.fa-twitter
            a.social-icon(target="_blank" href="http://youtube.com/sinfoist")
              i.social-icon.fa.fa-youtube
            a.social-icon(target="_blank" href="http://instagram.com/sinfoist")
              i.social-icon.fa.fa-instagram
            a.social-icon(target="_blank" href="http://github.com/sinfo")
              i.social-icon.fa.fa-github

          .all-50.medium-100.small-100.tiny-100.push-center.events  
            .ink-carousel(data-pagination='#carousel-pagination-event')
              ul.stage.half-gutters
                each event in events
                  li.slide.event
                    a(href='/' + event.id)
                      h3.description.align-center= event.name
                      .calendar
                        i.fa.fa-calendar
                        br.other
                        span= event.begin.day + ' - ' + event.end.day + ' ' + event.begin.month
                        br
                        span= event.begin.year
                      
              nav#carousel-pagination-event.ink-navigation
                ul.pagination.chevron

      .area-light
