section.page.users.view.ink-grid
  h1.name.align-center(data-hook='name')
  .img-container
    .img(data-hook='img')
    
  .buttons.align-center
    a.ink-button(data-hook='file-add' style='background: #AA0' href='/me/edit')
      span
        i.fa.fa-cloud-upload
      span Upload your resume
    .ink-button(data-hook='file-download' style='background: #AA0')
      span
        i.fa.fa-cloud-download
      span Download resume
  
  .information-area

    h4.align-center Your Profile
    div(data-hook='area')
      h6 Area
      div

    div(data-hook='skills')
      h6 Skills
      div

    div(data-hook='user-achievements')

    div(data-hook='user-sessions')
  
  h4.align-center Connect more accounts
  .buttons.align-center
    .ink-button(data-hook='facebook-add' style='background: #48649F')
      span
        i.fa.fa-facebook
      span Add facebook account
    .ink-button(data-hook='google-add' style='background: #DD4B39')
      span
        i.fa.fa-google
      span Add google account
    .ink-button(data-hook='fenix-add' style='background: #19ACCD')
      span
        i.fa.fa-graduation-cap
      span Add fenixedu account

  div.message(data-hook='message-container')
    h6(data-hook='message-text')
