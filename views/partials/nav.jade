li(style='min-width:100px')
  a(href='/me' data-hook='authenticated-menu' style='text-align: right; margin-right: 20px')
    img.user-picture(data-hook='user-picture')

    span
      span.hide-medium.hide-small.hide-tiny(data-hook='user-name')
      span.hide-all.show-medium.show-small.show-tiny Me

  ul.submenu(data-hook='authenticated-menu')
    li
      a(href='/me/edit')
        i.fa.fa-edit
          span Edit profile
      a(data-hook='action-logout')
        i.fa.fa-sign-out
          span Logout

  span(data-hook='unauthenticated-menu')
    a(data-hook='action-login')
      i.fa.fa-sign-in
        span Login


  div.clear
